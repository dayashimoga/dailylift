{
  "name": "boringwebsite",
  "version": "1.0.0",
  "description": "Automated static website with daily quotes, tools, blog, and monetization â€” runs on autopilot via GitHub Actions.",
  "main": "scripts/build.js",
  "scripts": {
    "build": "node scripts/build.js",
    "fetch-quote": "node scripts/fetch-quote.js",
    "generate-sitemap": "node scripts/generate-sitemap.js",
    "post-social": "node scripts/post-social.js",
    "dev": "npx serve dist -l 3000",
    "clean": "node -e \"const fs=require('fs');fs.rmSync('dist',{recursive:true,force:true})\"",
    "test": "jest --runInBand --verbose --forceExit --detectOpenHandles 2>&1",
    "test:coverage": "jest --runInBand --coverage --verbose --forceExit --detectOpenHandles 2>&1",
    "test:ci": "jest --runInBand --coverage --ci --verbose --forceExit --detectOpenHandles 2>&1",
    "lint": "node scripts/lint-check.js"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "collectCoverageFrom": [
      "scripts/**/*.js",
      "src/tools/**/*.js",
      "src/js/**/*.js",
      "!scripts/lint-check.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "text-summary",
      "lcov",
      "json-summary"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  },
  "dependencies": {
    "marked": "^12.0.0",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^24.0.0",
    "cheerio": "1.0.0-rc.12"
  },
  "keywords": [
    "quotes",
    "tools",
    "automation",
    "static-site",
    "passive-income"
  ],
  "author": "",
  "license": "MIT"
}